<Ui xmlns="http://www.blizzard.com/wow/ui" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui">
    <Frame name="GHM_Book_Template" virtual="true">
        <Size>
            <AbsDimension x="200" y="88"/>
        </Size>
        <Layers>
            <Layer level="BACKGROUND">
                <FontString name="$parentLabel" inherits="GameFontNormalSmall" text="" justifyH="RIGHT">
                    <Anchors>
                        <Anchor point="BOTTOMLEFT" relativePoint="TOPLEFT">
                            <Offset>
                                <AbsDimension x="0" y="0"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                    <FontHeight>
                        <AbsValue val="11"/>
                    </FontHeight>
                </FontString>
            </Layer>
        </Layers>

        <Frames>
            <Frame name="$parentArea">
                <Anchors>
                    <Anchor point="TOPLEFT" relativePoint="TOPLEFT"/>
                    <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT"/>
                </Anchors>
                <Backdrop bgFile="Interface\Tooltips\ChatBubble-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
                    <EdgeSize>
                        <AbsValue val="16"/>
                    </EdgeSize>
                    <TileSize>
                        <AbsValue val="16"/>
                    </TileSize>
                    <BackgroundInsets>
                        <AbsInset left="5" right="5" top="5" bottom="5"/>
                    </BackgroundInsets>
                </Backdrop>
                <Layers>
                    <Layer>
                        <FontString name="$parentTitleText" hidden="false" font="Fonts\FRIZQT__.TTF" text= "" justifyH="LEFT" justifyV="TOP">
                            <Anchors>
                                <Anchor point="TOPLEFT" relativePoint="TOPLEFT">
                                    <Offset>
                                        <AbsDimension x="44" y="-6"/>
                                    </Offset>
                                </Anchor>
                                <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT">
                                    <Offset>
                                        <AbsDimension x="0" y="0"/>
                                    </Offset>
                                </Anchor>
                            </Anchors>
                            <FontHeight>
                                <AbsValue val="12"/>
                            </FontHeight>
                            <Color r="1" g="1" b="1"/>
                            <Shadow>
                                <Color r="0" g="0" b="0"/>
                                <Offset>
                                    <AbsDimension x="1" y="-1"/>
                                </Offset>
                            </Shadow>
                        </FontString>
                    </Layer>
                </Layers>
                <Frames>
                    <Button name="$parentEditButton" inherits="GHM_Button_Template">
                        <Size>
                            <AbsDimension x="40" y="40"/>
                        </Size>
                        <Anchors>
                            <Anchor point="TOPLEFT" relativePoint="TOPLEFT">
                                <Offset>
                                    <AbsDimension x="4" y="-6"/>
                                </Offset>
                            </Anchor>
                        </Anchors>
                    </Button>
                </Frames>
            </Frame>
        </Frames>
    </Frame>
</Ui>